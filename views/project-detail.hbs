<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Project</title>
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body style="font-family: Poppins" class="bg-secondary">
    <nav class="navbar navbar-expand-md" style="background-color: #f2f3f2">
      <div class="container">
        <a class="navbar-brand" href="/"><img
            src="https://dumbways.id/assets/images/brandred.png"
            alt="Logo"
            style="height: 30px"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-sm-0">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonials">Testimonials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link d-md-none" href="/contact">Contact Me</a>
            </li>
          </ul>
          {{#if user}}
            <span class="navbar-text">Hi, {{user.name}}</span>
            <a class="btn btn-dark mx-2" href="/logout">
              Logout</a>
          {{else}}
            <a class="btn btn-dark" href="/register">Register</a>
            <a class="btn btn-dark mx-2" href="/login">Login</a>
          {{/if}}
          <a class="btn btn-dark d-none d-md-inline" href="/contact">
            Contact Me
          </a>
        </div>
      </div>
    </nav>
    <main>
      <div class="container">
        <h1 class="text-center my-5 fw-bold">{{data.projectName}}</h1>
        <div class="d-flex gap-4">
          <img
            src="/{{data.image}}"
            alt="project image"
            class="object-fit-contain"
            style="max-width: 300px;"
          />
          <div>
            <p class="fw-medium">Duration</p>
            <div class="d-flex gap-3">
              <i class="fas fa-calendar-alt"></i>
              <span>{{data.dateRange}}</span>
            </div>
            <div class="d-flex gap-3">
              <i class="fas fa-clock"></i>
              <span>{{data.duration}}</span>
            </div>
            <p class="fw-medium my-3"> Technologies</p>
            <div class="d-flex flex-wrap gap-2">
              {{#if data.node}}
                <div class="col d-flex gap-2">
                  <i class="fa-brands fa-node fa-2x"></i>
                  <p class="my-1"> Node Js</p>
                </div>
              {{/if}}
              {{#if data.js}}
                <div class="col d-flex gap-2">
                  <i class="fa-brands fa-js fa-2x"></i>
                  <p class="my-1"> Javascript</p>
                </div>
              {{/if}}
              {{#if data.bootstrap}}
                <div class="col d-flex gap-2">
                  <i class="fa-brands fa-bootstrap fa-2x"></i>
                  <p class="my-1"> Bootstrap</p>
                </div>
              {{/if}}
              {{#if data.react}}
                <div class="col d-flex gap-2">
                  <i class="fa-brands fa-react fa-2x"></i>
                  <p class="my-1"> React</p>
                </div>
              {{/if}}
              {{#if data.html5}}
                <div class="col d-flex gap-2">
                  <i class="fa-brands fa-html5 fa-2x"></i>
                  <p class="my-1">Html5</p>
                </div>
              {{/if}}

            </div>
          </div>
        </div>
        <p class="mt-5" style="text-align: justify;">{{data.description}}</p>
      </div>
    </main>
  </body>
</html>