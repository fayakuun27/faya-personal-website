<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Project</title>
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body style="font-family: Poppins" class="bg-secondary">
    <nav class="navbar navbar-expand-md" style="background-color: #f2f3f2">
      <div class="container">
        <a class="navbar-brand" href="/"><img
            src="https://dumbways.id/assets/images/brandred.png"
            alt="Logo"
            style="height: 30px"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-sm-0">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonials">Testimonials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link d-md-none" href="/contact">Contact Me</a>
            </li>
          </ul>
          {{#if user}}
            <span class="navbar-text">Hi, {{user.name}}</span>
            <a class="btn btn-dark mx-2" href="/logout">
              Logout</a>
          {{else}}
            <a class="btn btn-dark" href="/register">Register</a>
            <a class="btn btn-dark mx-2" href="/login">Login</a>
          {{/if}}
          <a class="btn btn-dark d-none d-md-inline" href="/contact">
            Contact Me
          </a>
        </div>
      </div>
    </nav>
    <main>
      <div class="container" style="max-width: 500px">
        {{#if messages.success}}
          <div class="alert alert-success" role="alert">
            {{messages.success}}
          </div>
        {{/if}}
        {{#if messages.error}}
          <div class="alert alert-danger" role="alert">
            {{messages.error}}
          </div>
        {{/if}}

        <h1 class="text-center my-5 fw-bold">LOGIN</h1>
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label fw-semibold">Email</label>
            <input type="email" class="form-control" id="email" name="email" />
          </div>
          <div class="mb-3">
            <label
              for="password"
              class="form-label fw-semibold"
            >Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
            />
          </div>
          <div class="mb-3 d-flex flex-row-reverse">
            <button class="btn btn-dark align-items-end" type="submit">
              submit
            </button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>