<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Project</title>
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body style="font-family: Poppins" class="bg-secondary">
    <nav class="navbar navbar-expand-md" style="background-color: #f2f3f2">
      <div class="container">
        <a class="navbar-brand" href="/"><img
            src="https://dumbways.id/assets/images/brandred.png"
            alt="Logo"
            style="height: 30px"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-sm-0">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonials">Testimonials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link d-md-none" href="/contact">Contact Me</a>
            </li>
          </ul>
          {{#if user}}
            <span class="navbar-text">Hi, {{user.name}}</span>
            <a class="btn btn-dark mx-2" href="/logout">
              Logout</a>
          {{else}}
            <a class="btn btn-dark" href="/register">Register</a>
            <a class="btn btn-dark mx-2" href="/login">Login</a>
          {{/if}}
          <a class="btn btn-dark d-none d-md-inline" href="/contact">
            Contact Me
          </a>
        </div>
      </div>
    </nav>
    <main>
      <div class="container" style="max-width: 720px">
        <h1 class="text-center my-5 fw-bold">EDIT PROJECT</h1>
        <form
          action="/edit-project/{{data.id}}"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="project-name" class="form-label fw-semibold">Project
              Name</label>
            <input
              type="text"
              class="form-control"
              id="project-name"
              name="projectName"
              value="{{data.projectName}}"
            />
          </div>
          <div class="mb-3 d-flex gap-2">
            <div class="flex-fill">
              <label for="start-date" class="form-label fw-semibold">Start Date</label>
              <input
                type="date"
                class="form-control"
                id="start-date"
                name="startDate"
                value="{{data.startDate}}"
              />
            </div>
            <div class="flex-fill">
              <label for="finish-date" class="form-label fw-semibold">Finish
                Date</label>
              <input
                type="date"
                class="form-control"
                id="finish-date"
                name="finishDate"
                value="{{data.finishDate}}"
              />
            </div>
          </div>
          <div class="mb-3">
            <label
              for="description"
              class="form-label fw-semibold"
            >Description</label>
            <textarea
              class="form-control"
              id="description"
              rows="3"
              name="description"
            >{{data.description}}</textarea>
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Technologies</label>
            <div class="row">
              <div class="col">
                <div class="form-check">
                  {{#if data.node}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-node"
                      name="technologies"
                      id="node"
                      checked
                    />
                  {{else}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-node"
                      name="technologies"
                      id="node"
                    />
                  {{/if}}

                  <label class="form-check-label" for="node"> Node JS </label>
                </div>
              </div>
              <div class="col">
                <div class="form-check">
                  {{#if data.js}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-js"
                      name="technologies"
                      id="js"
                      checked
                    />
                  {{else}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-js"
                      name="technologies"
                      id="js"
                    />
                  {{/if}}
                  <label class="form-check-label" for="js"> Javascript </label>
                </div>
              </div>
              <div class="col">
                <div class="form-check">
                  {{#if data.bootstrap}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-bootstrap"
                      name="technologies"
                      id="bootstrap"
                      checked
                    />
                  {{else}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-bootstrap"
                      name="technologies"
                      id="bootstrap"
                    />
                  {{/if}}
                  <label class="form-check-label" for="bootstrap">
                    Bootstrap
                  </label>
                </div>
              </div>
              <div class="col">
                <div class="form-check">
                  {{#if data.react}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-react"
                      name="technologies"
                      id="react"
                      checked
                    />
                  {{else}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-react"
                      name="technologies"
                      id="react"
                    />
                  {{/if}}
                  <label class="form-check-label" for="react"> React </label>
                </div>
              </div>
              <div class="col">
                <div class="form-check">
                  {{#if data.html5}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-html5"
                      name="technologies"
                      id="html5"
                      checked
                    />
                  {{else}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="fa-html5"
                      name="technologies"
                      id="html5"
                    />
                  {{/if}}
                  <label class="form-check-label" for="html5"> Html 5 </label>
                </div>
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="img-up" class="form-label fw-semibold">Upload Image</label>
            <input
              class="form-control"
              type="file"
              id="img-up"
              name="image"
              value="{{data.image}}"
            />
          </div>
          <div class="mb-3 d-flex flex-row-reverse">
            <button class="btn btn-dark align-items-end" type="submit">
              submit
            </button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>